@*@using Ajax.Models*@
@model BVL.Models.EmailFormModel


<!DOCTYPE html>

<html>

<body>
    @using (Html.BeginForm("sent", "Home", FormMethod.Post))
    {
        @Html.ValidationSummary(true)
        <div id="contact" class="text-center">
            <div class="overlay">
                <div class="container" style="font-family: 'Heebo';">
                    <div class="section-title center">
                        <h2>@BVL.Resource.RHome.touch</h2>
                        <hr>
                    </div>
                    <div class="col-md-8 col-md-offset-2">
                        <form name="sentMessage" id="contactForm" novalidate>
                            <div class="row">
                                <div class="col-md-4">
                                    @*<div class="form-group col-xs-12 floating-label-form-group controls">*@
                                    <label>@BVL.Resource.RHome.FullName</label><br />
                                    <div class="form-group">
                                        @Html.TextAreaFor(m => m.FromName, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.FromName)
                                    </div>
                                    @*</div>*@
                                </div>
                                <div class="col-md-4">
                                    @*<div class="form-group col-xs-12 floating-label-form-group controls">*@
                                    <label>@BVL.Resource.RHome.Email</label><br />
                                    <div class="form-group">
                                        @Html.TextAreaFor(m => m.FromEmail, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.FromEmail)
                                    </div>
                                    @*</div>*@
                                </div>
                                <div class="col-md-4">
                                    @*<div class="form-group col-xs-12 floating-label-form-group controls">*@
                                    <label>@BVL.Resource.RHome.Phone</label><br />
                                    <div class="form-group">
                                        @Html.TextAreaFor(m => m.Phone, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Phone)
                                    </div>
                                    @*</div>*@
                                </div>
                            </div>
                            @*<div class="form-group col-xs-12 floating-label-form-group controls">*@
                            <label>@BVL.Resource.RHome.message</label><br />
                            <div class="form-group">
                                @Html.TextAreaFor(m => m.Message, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Message)
                            </div>
                            @*</div>*@


                            
                            <div id="success"></div>
                            <div class="row">
                                <div class="form-group col-xs-12">
                                    <button type="submit" class="btn btn-default">@BVL.Resource.RHome.massag</button>
                                </div>
                            </div>
                        </form>

                        
                        <div class="col-md-10 col-md-offset-1" style="background-color:#988454">
                            <h3 style="color:black">@BVL.Resource.RHome.contribute</h3>
                            <p>@BVL.Resource.RHome.donate</p>
                            <div id="success"></div>
                            <div class="row">
                                <div class="form-group col-xs-12">
                                    <p class="btn btn-default" style="background-color:gray"><a class="active" href="https://www.paypal.com/donate/?cmd=_s-xclick&hosted_button_id=SSJP669RVESWA">@BVL.Resource.RHome.HoldTorah</a></p>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

   
    @if (ViewBag.Message != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
        </script>
    }
</body>
</html>


