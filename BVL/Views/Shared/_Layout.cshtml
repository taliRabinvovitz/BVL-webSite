<body> 

    <!-- Navigation -->
    <div id="nav">
        <nav class="navbar navbar-custom navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-main-collapse"> <i class="fa fa-bars"></i> </button>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse navbar-main-collapse">
                    <ul class="nav navbar-nav">
                        <!-- Hidden li included to remove active class from about link when scrolled up past about section -->
                        <li class="hidden"> <a href="#page-top"></a> </li>
                        <li><a style="font-family: 'Heebo';" class="active" href="/Home/Index">@BVL.Resource.RHome.Home</a></li>
                        <li><a style="font-family: 'Heebo';" href="/Home/OpenAbout">@BVL.Resource.RHome.About</a></li>
                        <li><a style="font-family: 'Heebo';" href="/Home/BeitVaad">@BVL.Resource.RHome.BeisVaadLachachomim</a></li>
                        <li><a style="font-family: 'Heebo';" href="/Home/VelakachtiEtchem">@BVL.Resource.RHome.VelakachtiEtchem</a></li>
                        <li><a style="font-family: 'Heebo';" href="/Home/TorahLeasons">@BVL.Resource.RHome.ToraLeasons</a></li>
                        <li style="font-family: 'Heebo';"> @Html.ActionLink(@BVL.Resource.RHome.HoldTorah, "HoldTorah", "Home", new { area = "" }, new { @class = "navbar-brand" })</li>
                    </ul>
                        @*<p>
                            @{
